<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.cursoandroid.unidad4.Crud.ConversionMoneda" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="CONVERSION DE MONEDAS DOLAR-EURO-PESOS" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPesosDolar"
        android:layout_below="@+id/btnPesosDolar"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="37dp"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btnPesosDolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="48dp"
        android:text="Pesos-Dolar" />

    <Button
        android:id="@+id/btnDolarPesos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_centerVertical="true"
        android:text="Dolar-Pesos" />

    <Button
        android:id="@+id/btnPesosEuros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/linearLayout1"
        android:text="Pesos-Euros" />

    <Button
        android:id="@+id/btnEurosPesos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPesosEuros"
        android:layout_centerHorizontal="true"
        android:text="Euros-Pesos" />

    <Button
        android:id="@+id/btnDolarEuros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEurosPesos"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/linearLayout2"
        android:text="Dolar-Euros" />

    <Button
        android:id="@+id/btnEurosDolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDolarEuros"
        android:layout_alignBottom="@+id/btnDolarEuros"
        android:layout_alignLeft="@+id/btnPesosEuros"
        android:layout_marginLeft="16dp"
        android:text="Euros-Dolar" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnDolarPesos"
        android:layout_below="@+id/btnEurosDolar"
        android:text="Limpiar" />

    <TextView
        android:id="@+id/etiResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnLimpiar"
        android:layout_alignLeft="@+id/btnEurosDolar"
        android:text="Resultado" />

    <EditText
        android:id="@+id/campoValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="10" />

    <TextView
        android:id="@+id/valorMoneda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/campoValor"
        android:layout_alignBottom="@+id/campoValor"
        android:layout_alignLeft="@+id/textView1"
        android:text="Valor Modeda" />

</RelativeLayout>